{
  "env": {
    "node": true,
    "es2021": true,
  },
  "extends": ["eslint:recommended", "prettier"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "requireConfigFile": false,
  },
  "rules": {
    "no-console": 0,
    "no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
    "no-var": "error",
    "prefer-const": "error",
    "prettier/prettier": "error",
  },
  "plugins": ["prettier"],
}
